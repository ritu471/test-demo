{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "networkInterfaceName": {
      "type": "string"
    },
    "networkSecurityGroupName": {
      "type": "string"
    },
    "networkSecurityGroupRules": {
      "type": "array"
    },
    "subnetName": {
      "type": "string"
    },
     "virtualNetworkName": {
       "type": "string"
    },
    "virtualMachineName": {
      "type": "string"
    },
    "virtualMachineComputerName": {
      "type": "string"
    },
    "osDiskType": {
      "type": "string"
    },
    "virtualMachineSize": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "secureString"
    },
    "patchMode": {
      "type": "string"
    },
    "enableHotpatching": {
      "type": "bool"
    },
    "zone": {
      "type": "string"
    },
    "instanceNumber": {
      "type": "string"
    },
    "startNumber": {
      "type": "string"
    }
  },
  "variables": {
    "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]",
    "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
    "indexNumber": "[int(parameters('startNumber'))]"
  },
    "resources": [
      {
        "name": "[concat(parameters('networkInterfaceName'),copyIndex(variables('indexNumber')))]",
        "type": "Microsoft.Network/networkInterfaces",
        "apiVersion": "2018-10-01",
        "location": "[parameters('location')]",
        "dependsOn": [
          "[concat('Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'),copyIndex(variables('indexNumber')))]"
        ],
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipconfig1",
              "properties": {
                "subnet": {
                  "id": "[variables('subnetRef')]"
                },
                "privateIPAllocationMethod": "static"
              }
            }
          ],
          "networkSecurityGroup": {
            "id": "[concat(variables('nsgId'),copyIndex(variables('indexNumber')))]"
          }
        },
        "copy": {
          "name": "NICcopy",
          "count": "[int(parameters('instanceNumber'))]"
        },
        "tags": {
          "Role": "Domain Services",
          "Location": "UK South",
          "Data Classification": "Internal",
          "Description": "Domain Controllers for NTIS",
          "Technology or Software ": "Windows Server 2019",
          "Disaster Recovery ": "No",
          "Internet Facing ": "No",
          "Component Type ": "Virtual Machine"
        }
      },
      {
        "name": "[concat(parameters('networkSecurityGroupName'),copyIndex(variables('indexNumber')))]",
        "type": "Microsoft.Network/networkSecurityGroups",
        "apiVersion": "2019-02-01",
        "location": "[parameters('location')]",
        "properties": {
          "securityRules": "[parameters('networkSecurityGroupRules')]"
        },
        "copy": {
          "name": "NSGCcopy",
          "count": "[int(parameters('instanceNumber'))]"
        },
        "tags": {
          "Role": "Domain Services",
          "Location": "UK South",
          "Data Classification": "Internal",
          "Description": "Domain Controllers for NTIS",
          "Technology or Software ": "Windows Server 2019",
          "Disaster Recovery ": "No",
          "Internet Facing ": "No",
          "Component Type ": "Virtual Machine"
        }
      },
      {
        "name": "[concat(parameters('virtualMachineName'),copyIndex(variables('indexNumber')))]",
        "type": "Microsoft.Compute/virtualMachines",
        "apiVersion": "2017-12-01",
        "location": "[parameters('location')]",
        "dependsOn": [
          "[concat('Microsoft.Network/networkInterfaces/', parameters('networkInterfaceName'),copyIndex(variables('indexNumber')))]"
        ],
        "properties": {
          "hardwareProfile": {
            "vmSize": "[parameters('virtualMachineSize')]"
          },
          "storageProfile": {
            "osDisk": {
              "createOption": "fromImage",
              "managedDisk": {
                "storageAccountType": "[parameters('osDiskType')]"
              }
            },
            "imageReference": {
              "publisher": "MicrosoftWindowsServer",
              "offer": "WindowsServer",
              "sku": "2019-datacenter-gensecond",
              "version": "latest"
            }
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('networkInterfaceName'),copyIndex(variables('indexNumber'))))]"
              }
            ]
          },
          "osProfile": {
            "computerName": "[parameters('virtualMachineComputerName')]",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]",
            "windowsConfiguration": {
              "enableAutomaticUpdates": true,
              "provisionVmAgent": true,
              "patchSettings": {
                "enableHotpatching": "[parameters('enableHotpatching')]",
                "patchMode": "[parameters('patchMode')]"
              }
            }
          }
        },
        "copy": {
          "name": "VMCcopy",
          "count": "[int(parameters('instanceNumber'))]"
        },
        "tags": {
          "Role": "Domain Services",
          "Location": "UK South",
          "Data Classification": "Internal",
          "Description": "Domain Controllers for NTIS",
          "Technology or Software ": "Windows Server 2019",
          "Disaster Recovery ": "No",
          "Internet Facing ": "No",
          "Component Type ": "Virtual Machine"
        },
        "zones": [
          "[parameters('zone')]"
        ]
      }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}